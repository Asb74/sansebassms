platform :ios, '15.0'

use_frameworks! :linkage => :static
use_modular_headers!

target 'Runner' do
  # Usamos directamente el podspec local que ya tienes en ios/Flutter
  pod 'Flutter', :path => File.join(__dir__, 'Flutter')


  # Puedes añadir otros pods aquí si es necesario
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
