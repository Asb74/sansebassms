platform :ios, '15.0'

use_frameworks! :linkage => :static
use_modular_headers!

target 'Runner' do
  flutter_install_plugins
end

def flutter_install_plugins
  generated_plugin_registrant = File.expand_path(File.join('..', '.flutter-plugins-dependencies'))
  if File.exist?(generated_plugin_registrant)
    plugin_specs = JSON.parse(File.read(generated_plugin_registrant))
    plugin_specs['plugins']['ios'].each do |plugin|
      pod plugin['name'], :path => plugin['path']
    end
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
